 @{var courses = (List<CourseModel>)ViewData["courses"];
     Layout = "CourseLayout";

<h2 style="color: #30475e"> Learn from the BEST in Tuwaiq Camp </h2>
<body>

    <div class=" d-flex flex-wrap" >
        @foreach (var crs in courses)
        {
            <div class="card text-center mb-4 " style="width: 12rem; margin-inline:auto ;">
                <img src="@crs.CourseImg" class="card-img-top" alt="Tea Coal" width="100" height="180 ">
                <div class="card-body" style="color: #30475e ;background-color:#e7e7de ">
                    <h5 class="card-title">@crs.CourseName</h5>
                    <p class="card-text">This course is tought by the lecturer : <b>@crs.CourseLecturer</b></p>
                    <p class="card-text">Buy this course for : <b>@crs.CoursePrice $</b></p>
                    <a class="btn btn-secondary nav-link" asp-area="" asp-controller="Courses" asp-action="Details" asp-route-id="@crs.CourseId">Details</a>
                </div>
            </div>
        }
    </div>

</body>
     }
